<Window x:Class="ClipBoardReplacer.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipBoardReplacer"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox x:Name="NameTextBox" Height="23" TextWrapping="Wrap" Text="{Binding Name , UpdateSourceTrigger=PropertyChanged }"/>
            <TextBox x:Name="AgeTextBox" Height="23" TextWrapping="Wrap" Text="{Binding Age , UpdateSourceTrigger=PropertyChanged }"/>
        </StackPanel>
    </Grid>
</Window>
